{
    "development": {
        "type":        "postgres",
        "url":         "postgres://imeter:imeter@localhost/imeter",
        "synchronize": false,
        "logging":     true,
        "entities":    ["src/api/models/**/*.schema.js"],
        "migrations":  ["src/api/migrations/**/*.js"],
        "subscribers": ["src/api/subscriber/**/*.js"],
        "cli":         {
            "migrationsDir": "src/api/migrations"
        }
    },
    "test": {
        "type":        "postgres",
        "url":         "postgres://imeter:imeter@localhost/imeter_test",
        "synchronize": true,
        "logging":     false,
        "entities":    ["src/api/models/**/*.schema.js"],
        "migrations":  ["src/api/migrations/**/*.js"],
        "subscribers": ["src/api/subscriber/**/*.js"],
        "cli":         {
            "migrationsDir": "src/api/migrations"
        }
    }
}
